<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Look at All These Burgers</h1>
        <img src="/assets/img/burger.png" alt="Burger" width="100" height="100">
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h3>Devour These Burgers</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>Devoured!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>Order a New Burger!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="burger_name">
                </div>
                <button type="submit">Make Burger</button>
            </form>
        </div>
    </div>
</div>



